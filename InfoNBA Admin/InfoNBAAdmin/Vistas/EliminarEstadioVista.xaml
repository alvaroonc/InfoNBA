<Page x:Class="InfoNBAAdmin.Vistas.EliminarEstadioVista"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:InfoNBAAdmin.Vistas"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EliminarEstadioVista">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Estadio a eliminar " />
            <ComboBox x:Name="EstadiosComboBox" Width="200" ItemsSource="{Binding Path=ListaEstadios}" DisplayMemberPath="Nombre" SelectedItem="{Binding Path=EstadioSeleccionado}"/>
        </StackPanel>
        <Button x:Name="EliminarEstadioButton" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Eliminar Estadio" Height="40" Width="200" Click="EliminarEstadioButtonClick"/>
    </Grid>
</Page>
